name 'p11-kit'
org 'amylum'

licenses 'COPYING'

deps(
  libtasn1: {
    version: '4.12-1',
    checksum: '4396d9f56ebabf1f433abc027541e13bccd393dda871633046bde6e646c62749'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  'without-libffi': nil
)
remove_linker_archives

cflags
harden

patch 'libnssckbi-compat.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

