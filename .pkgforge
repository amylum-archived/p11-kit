name 'p11-kit'
org 'amylum'

licenses 'COPYING'

deps(
  libtasn1: {
    version: '4.13-1',
    checksum: 'fd245952c05c8d3b7fd5b56c920c05c91e9e05a5aec9f83eb109d21d15684345'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  'without-libffi': nil
