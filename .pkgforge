name 'p11-kit'
org 'amylum'

licenses 'COPYING'

deps(
  libtasn1: '4.12-1'
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  'without-libffi': nil
)
remove_linker_archives

cflags
harden

patch 'libnssckbi-compat.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

